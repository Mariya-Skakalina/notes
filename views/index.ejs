<html>
  <head>
    <link href="https://fonts.googleapis.com/css?family=Alex+Brush|Cuprum" rel="stylesheet"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	  <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header>
      <h2 id="head">My notes</h2>
      <div class="auth">
        <% if(auth) { %>
          <!-- <a href="#" id="my-profile">Мой профиль</a>
          <p class="separator">|</p> -->
          <a href="#" id="logout">Выход</a>
        <% } else { %>
          <a href="#" id="login">Вход</a>
          <p class="separator">|</p>
          <a href="#" id="register">Регистрация</a>
        <% } %>
      </div>
    </header>
    <hr>
    <div id="container">
        <% if(auth) { %>
          <p><a id="create">Добавить заметку</a></p>
          <div id="createNote" class="createNote">
            <form method="POST" id="createSup">
                <a class="close" id="close_create">X</a>
                <label for="title">Заголовок</label>
                <br>
                <input type="text" name="title" id="title">
                <br>
                <label for="content">Тект</label>
                <br>
                <textarea type="text" name="content" id="content"></textarea>
                <br>
                <p id="create-ok">Отправить</p>
            </form>
          </div>
          <% } else if(remember){ %>
            <p id="emailR">{{user}}</p>
            <div>
              <p>Востановление пароля</p>
              <br>
              <input type="password" name="password" id="password">
              <br>
              <input type="password" name="passwordR" id="passwordR">
              <br>
              <p id="password_ok">Отправить</p>
            </div>
            <script src="/javascripts/passwordRecovery.js"></script>
          <% } else { %>
            <p>Для создания заметок Вам необходимо войти на сайт или зарегистрироваться</p>
        <% } %>
    </div>
    <script src="/javascripts/main.js"></script>
  </body>
</html>
